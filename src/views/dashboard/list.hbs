<div class="col-md-7 mx-auto">
    <div class="card mb-5">
        <div class="card-header">
            <h4 class="m-0"><b>Dashboard</b></h4>
        </div>
        <div class="card-body">
            <table class="table table-striped m-0">
                <thead></thead>
                <tbody>
                    <tr>
                        <td><b>Id</b></td>
                        <td><b>Username</b></td>
                        <td><b>Fullname</b></td>
                        <td><b>Role</b></td>
                        <td><b>Actions</b></td>
                    </tr>
                    {{#each users }}
                        <tr>
                            <td><button type="button" class="button-none" id="td1{{id}}">{{id}}</button></td>
                            <td><button type="button" class="button-none" id="td2{{id}}">{{username}}</button></td>
                            <td><button type="button" class="button-none" id="td3{{id}}">{{fullname}}</button></td>
                            <td><button type="button" class="button-none" id="td4{{id}}">{{role}}</button></td>
                            <td><a href="dashboard/deleteuser/{{id}}" class="btn btn-sm btn-danger">Delete</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="card w-100 me-3">
            <div class="card-header">
                <h6 class="m-0"><b>Add rol</b></h6>
            </div>
            <div class="card-body d-flex align-items-center">
                <form action="/dashboard/updateRole" method="POST" class="w-100">
                    <div class="form-group mb-3">
                        <input min="1" type="number" class="form-control" placeholder="Id:" id="id" name="id" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <select name="role" id="roleSelect" class="roleSelect" disabled>
                            <option disabled selected></option>
                            {{#each roles }}
                                <option value="{{id}}">{{role}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button class="btn btn-success" id="addrol-button">Add rol</button>
                </form>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-header">
                <h6 class="m-0"><b>Create user</b></h6>
            </div>
            <div class="card-body d-flex align-items-center">
                <form action="/dashboard/createUser" method="POST" class="w-100">
                    <div class="form-group my-3">
                        <input type="text" name="username" class="form-control" placeholder="Username:">
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" name="fullname" class="form-control" placeholder="Fullname:">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Password:">
                    </div>
                    <button class="btn btn-primary">Create user</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/dashboard.js"></script>