<div id="info-panel">
    <div class="card">
        <div class="card-header">
            <h4><b>Account info panel</b></h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <p><b>Id: </b>{{user.id}}</p>
                    <p><b>Username: </b>{{user.username}}</p>
                    <p><b>Fullname </b>{{user.fullname}}</p>
                    <p><b>Role: </b>{{user.role}}</p>
                </div>
                <div class="col-md-7" id="box">
                    <img class="rounded mx-auto d-block" src="{{user.img}}">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <form action="profile/uploadImg" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-9 col-12 mt-3">
                                <input type="file" id="image" name="image" class="form-control"/>
                                <input type="hidden" id="actualLink" name="actualLink" value="{{user.img}}"/>
                            </div>
                            <div class="col-md-3 col-12 mt-3">
                                <button class="btn btn-primary col-12">Upload</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>