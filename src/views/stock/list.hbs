<div class="col-md-2"></div>
<div class="col-md-7">
    <div class="card mb-5">
        <div class="card-header">
            <h4 class="m-0"><b>Stock Menu</b></h4>
        </div>
        <div class="card-body">
            <table class="table table-striped m-0">
                <thead></thead>
                <tbody>
                    <tr>
                        <td><b>Id</b></td>
                        <td><b>Name</b></td>
                        <td><b>$ Price</b></td>
                        <td><b>Amount</b></td>
                        <td><b>Actions</b></td>
                    </tr>
                    {{#each items }}
                        <tr>
                            <td><button type="button" class="button-none" id="id{{id}}">{{id}}</button></td>
                            <td><button type="button" class="button-none" id="n{{id}}">{{name}}</button></td>
                            <td>$ <button type="button" class="button-none" id="p{{id}}">{{price}}</button></td>
                            <td><button type="button" class="button-none" id="a{{id}}">{{amount}}</button></td>
                            <td><a href="stock/deleteItem/{{id}}" class="btn btn-sm btn-danger">Delete</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="card w-100 me-3">
            <div class="card-header">
                <h6 class="m-0"><b>Edit field</b></h6>
            </div>
            <div class="card-body d-flex align-items-center">
                <form action="/stock/updateItem" method="POST" class="w-100">
                    <div class="form-group mb-3">
                        <input min="1" type="number" class="form-control" placeholder="Id:" id="id" name="id" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <select name="field" id="fieldSelect" class="fieldSelect" disabled>
                            <option value="n">Name</option>
                            <option value="p">Price</option>
                            <option value="a">Amount</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" id="content" name="content" class="form-control" placeholder="Edited field:" autocomplete="off" disabled>
                    </div>
                    <button class="btn btn-success" id="edit-button">Edit field</button>
                </form>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-header">
                <h6 class="m-0"><b>Create item</b></h6>
            </div>
            <div class="card-body d-flex align-items-center">
                <form action="/stock/createItem" method="POST" class="w-100">
                    <div class="form-group my-3">
                        <input type="text" name="name" class="form-control" placeholder="Name:">
                    </div>
                    <div class="form-group mb-3">
                        <input type="number" name="price" class="form-control" placeholder="Price $:">
                    </div>
                    <div class="form-group mb-3">
                        <input type="number" name="amount" class="form-control" placeholder="Amount:">
                    </div>
                    <button class="btn btn-primary">Create item</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="card w-100 mt-md-0 mt-4">
        <div class="card-header">
            <h4 class="m-0"><b>Other Menus</b></h4>
        </div>
        <div class="card-body">
            <a href="stock/stadistics" class="btn btn-primary mb-3">Stadistics</a>
            <a href="stock/requests" class="btn btn-primary">Stock Requests</a>
        </div>
    </div>
</div>

<script src="js/stock.js"></script>